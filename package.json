{
  "name": "@ads/node-utils",
  "version": "1.0.10",
  "description": "敏捷开发系统内部node工具函数库",
  "main": "lib",
  "types": "lib/types",
  "scripts": {
    "build": "node gulpfile.js",
    "prepublishOnly": "npm run build",
    "lint": "eslint --ext .js,.vue,.json src",
    "lint:fix": "eslint --ext .js,.vue,.json src --fix",
    "commit": "git add . && git cz",
    "postversion": "npm run changelog",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add . && git commit -m \"docs(changelog): 更新CHANGELOG\""
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint -e $GIT_PARAMS",
    "prepare-commit-msg": "git add . && \"$*\" =~ \" -m\" || exec < /dev/tty && git cz --hook || true fi"
  },
  "lint-staged": {
    "src/**/*.{js,json}": [
      "eslint"
    ]
  },
  "files": [
    "lib",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git@gitee.com:agile-development-system/node-utils.git"
  },
  "keywords": [
    "ads",
    "agile-development-system",
    "node",
    "utils",
    "node-utils",
    "log",
    "fs"
  ],
  "license": "MIT",
  "author": "junyang",
  "dependencies": {
    "fs-extra": "^9.1.0",
    "json5": "^2.2.0",
    "webpack-merge": "^5.7.3"
  },
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/eslint-parser": "^7.13.14",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-decorators": "^7.13.15",
    "@babel/plugin-transform-modules-commonjs": "^7.13.8",
    "@babel/preset-env": "^7.13.15",
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/fs-extra": "^9.0.11",
    "@types/node": "^14.14.37",
    "commitizen": "^4.2.3",
    "conventional-changelog": "^3.1.24",
    "conventional-changelog-cli": "^2.1.1",
    "cz-conventional-changelog-zh": "^0.0.2",
    "eslint": "^7.24.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-clean": "^0.4.0",
    "gulp-cli": "^2.3.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "lint-staged": "^10.5.4",
    "merge2": "^1.4.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.4",
    "yorkie": "^2.0.0"
  }
}
